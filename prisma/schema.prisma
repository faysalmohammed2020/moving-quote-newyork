generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/* -------------------------
   NextAuth models (mapped)
--------------------------*/

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  role          String?
  passwordHash  String?   @map("password")     // was 'password' column
  phone         String?
  image         String?
  emailVerified DateTime?                       // MUST change type in DB from Boolean? -> DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  sessions      Session[]
  accounts      Account[]

  @@map("users") // existing table name
}

model Session {
  id           String   @id @default(cuid())
  expires      DateTime @map("expiresAt")
  sessionToken String   @unique @map("token")
  role         String?
  createdAt    DateTime
  updatedAt    DateTime
  ipAddress    String?
  userAgent    String?

  userId String
  user   User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model Account {
  id                    String   @id @default(cuid())
  // NextAuth required identity
  provider              String   @map("providerId")
  providerAccountId     String   @map("accountId")
  type                  String   @default("oauth") // বা "credentials" ব্যবহার করলে আপডেট করবে
  role                  String?

  // Relation
  userId                String
  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Tokens (mapped)
  access_token          String?  @map("accessToken")
  refresh_token         String?  @map("refreshToken")
  id_token              String?  @map("idToken")
  expires_at            Int?     @map("accessTokenExpiresAt") // seconds since epoch (NextAuth expects Int?)
  // refreshTokenExpiresAt কে রাখতে চাইলে আলাদা কাস্টম কলাম হিসেবেই থাকবে:
  refreshTokenExpiresAt DateTime?
  token_type            String?
  scope                 String?
  session_state         String?

  // Credentials-provider password যদি রাখো (optional/custom)
  password              String?

  createdAt             DateTime
  updatedAt             DateTime

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model VerificationToken {
  id         String   @id @default(cuid())
  identifier String
  token      String   @map("value") @unique
  expires    DateTime @map("expiresAt")
  createdAt  DateTime?
  updatedAt  DateTime?

  @@unique([identifier, token])
  @@map("verifications")
}

