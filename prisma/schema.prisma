generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/* -------------------------
   NextAuth models (mapped)
--------------------------*/
enum Role {
  USER
  ADMIN
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  role         Role     @default(USER)
  passwordHash  String?   @map("password")
  phone         String?
  image         String?
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  analyticsEvents AnalyticsEvent[]
  @@map("users")
}



model Account {
  id                    String   @id @default(cuid())
  provider              String   @map("providerId")
  providerAccountId     String   @map("accountId")
  type                  String   @default("oauth")
  userId                String
  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  access_token          String?  @map("accessToken")
  refresh_token         String?  @map("refreshToken")
  id_token              String?  @map("idToken")
  expires_at            Int?     @map("accessTokenExpiresAt")
  refreshTokenExpiresAt DateTime?
  token_type            String?
  scope                 String?
  session_state         String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model VerificationToken {
  id         String   @id @default(cuid())
  identifier String
  token      String   @map("value") @unique
  expires    DateTime @map("expiresAt")
  createdAt  DateTime?
  updatedAt  DateTime?

  @@unique([identifier, token])
  @@map("verifications")
}

